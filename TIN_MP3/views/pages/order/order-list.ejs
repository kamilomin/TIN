
<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Lista Zamowien</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>NrZamowienia</th>
                <th>Opis</th>
                <th>DataPrzyjecia</th>
                <th>Akcje</th>
            </tr>
            <tbody>
                <% for (let order of orders) { %>
                    <tr>
                        <td><%= order.name %></td>
                        <td><%= order.description %></td>
                        <td><%= order.dateArrival.toISOString().split('T')[0] %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/orders/details/<%=order._id%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/orders/edit/<%=order._id%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/orders/delete/<%=order._id%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>

        </thead>
    </table>


            
</main>
                    
                    
                    <footerExtension>
                        <p><a  href="orders/add" class="form-button-submit">Dodaj nowy dział</a></p>
                    </footerExtension>
